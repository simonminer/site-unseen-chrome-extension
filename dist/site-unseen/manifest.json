{
    "name": "Site Unseen",
    "version": "0.1.0",
    "description": "A screen reader emulator that enables you to experience the web from the perspective of a person who is blind",
    "manifest_version": 3,
    "author": "Simon Miner",
    "homepage_url": "https://siteunseen.dev",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
